<!DOCTYPE html>
<html>
    <head>
        <title>login page</title>
        <link rel="stylesheet" href="../public/css/bootstrap-v4.css">
        <script src="../public/js/jquery-3.6.0.min.js"></script>
        <script src="../public/js/bootstrap-v4.js"></script>
        <style>
            body{
                width: 100%;
                height: 100%;
                background-image: url('../includes/screen.jpg');
                background-position: center;
                background-attachment: fixed;

            }
            .container .card{
                background-color: rgb(248, 248, 248);
            }
        </style>
    </head>
    <body class="h-100 min-vh-100 d-flex justify-content-center align-items-center" >
        <%- include('../includes/header.ejs'); -%>
        <div class="container h-100 mh-100 w-100 d-flex justify-content-center align-items-center mt-5">
            <div id="cardlogin" class="card w-50  d-flex justify-content-center align-items-center shadow-lg">
                <div class="card-body d-inline" style="width: 60%;">
                    <%- include('../views/messages.ejs'); -%>
                    <h2 style="text-align: center; margin-bottom: 8%;">Log in</h2>
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="email" id="email" placeholder="Username...">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" id="password"
                                placeholder="Password...">
                        </div>
                        <div class="form-group d-flex">
                            <button type="submit" class="btn btn-success w-50">Log in</button>
                            <a href='/signUp' class="btn btn-primary w-50 ml-3">Sign up</a>
                        </div>
                        <div class="control-group text-center">
                            <a href="/forgotPassword" class="nav-link">Forgot Password</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>